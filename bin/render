#!/usr/bin/env bash

set -euo pipefail

print_help() {
  # Usage: print_help
  printf "Usage: render [input-file]\n"
}

render() {
  # Usage: render "input-file"
  template_path="$PWD/template/page.template"
  pandoc "$1" --template "$template_path"
}

[[ "$#" -lt 1 ]] && print_help && exit 1

render "$1"
